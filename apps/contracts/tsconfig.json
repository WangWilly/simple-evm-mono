{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "test/**/*", "./typechain", "./abi/**/*.json", "./files/*.json"],
  "exclude": ["node_modules", "dist"],
  "files": ["./hardhat.config.ts"]
}
